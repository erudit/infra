<?xml version="1.0"?>
<metaproxy xmlns="http://indexdata.com/metaproxy" version="1.0">
  <start route="start"/>
  <routes>
    <route id="start">
      <filter type="frontend_net">
        <threads>10</threads>
        <port>{{ ansible_eth1.ipv4.address }}:9000</port>
      </filter>
      <filter type="log">
        <message>F</message>
	<category session="true" apdu="true"/>
      </filter>
      <filter type="zoom">
	<torus>
	  <records>
	    <record>
	      <udb>solr-erudit</udb>
	      <cclmap_term>t=z</cclmap_term>
	      <cclmap_ti>u=title t=z</cclmap_ti>
	      <sru>solr</sru>
	      <zurl>{{ solr_ip_address }}/solr/select</zurl>
	    </record>
	  </records>
	</torus>
	<fieldmap cql="cql.serverChoice"/>
	<fieldmap cql="dc.title" ccl="ti"/>
      </filter>
      <filter type="bounce"/>
    </route>
  </routes>
</metaproxy>
